<div id="nav-search">
<p>ユーザー検索</p>
		<%= form_tag '/admin/users', :method => 'get' do %>
		<p>
  				<%= text_field_tag :search, params[:search] %>
  				<%= submit_tag '検索', :name => nil %>
  		</p>
		<% end %>

<table class="table table-hover table-inverse">
	<thead>
			<tr>
				<th>会員一覧</th>
				<th></th>
				<th></th>
			</tr>
	</thead>
	<tbody>
		<% @cd_users.each do |user| %>
		<tr>
		        <td><%= user.first_name %><%= user.last_name %></td>
		        <td><%= link_to '詳細' , public_user_path(user.id), class: "user_#{user.id}" %></td>
				<% end %>

				<% if @user == current_user %>
		        		<td><%= link_to "編集", edit_public_user_path(@user.id), class: "edit_#{@user.id}" %></td>
		        <% end %>

		        <% if @user == current_user %>
        	   <td><%= link_to "退会", root_path(@user.id, :user => {:deleated => 'true'}), method: :delete, class:"destroy_#{@user.id}", "data-confirm" => "本当に退会しますか？" %></td>

        <% end %>
       </tr>
    </tbody>