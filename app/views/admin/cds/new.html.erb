<div class="cd-new-body wrapper clearfix">
<div class="container">
    <%= form_for(@cd, url: admin_cds_path) do |f| %>
	<div class="registration-title"><h2>CD新規登録</h2></div>
        <div class="registration-left"><label>CDジャケット画像</label></div>
        <div>
            <%= f.attachment_field :image, class:"image" %>
        </div>
        <div class="registration-left"><label>アルバム/シングル名</label></div>
			<%= f.text_field :cd_name, class:"cd_name" %><br><br>
		<div class="registration-left"><label>アーティスト名</label></div>
		    <div class="edit-pull">
				<%= f.collection_select(:artist_id, Artist.all, :id, :name) %>
			</div><br>
            	<div id="artist_button" class="new_lebel btn-sm btn-success new-registration-button">アーティスト新規登録</div><br>
		<div class="registration-left"><label>単価</label></div>
			<%= f.text_field :price, class:"price" %> <label>円</label><br><br>
		<div class="registration-left"><label>レーベル</label></div>
		    <div class="edit-pull">
		        <%= f.collection_select(:label_id, Label.all, :id, :name) %>
		    </div><br>
            <div id="label_button" class="new_lebel btn-sm btn-success new-registration-button">レーベル新規登録</div><br>
		<div class="registration-left"><label>CDジャンル</label></div>
		    <div class="edit-pull">
		        <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
		    </div><br>
            <div id="genre_button" class="new_lebel btn-sm btn-success new-registration-button">CDジャンル新規登録</div><br>
		<div class="registration-left"><label>在庫数</label></div>
			<%= f.text_field :stock, class:"stock" %> <label>個</label><br><br>
		<div class="registration-button registration-left">
            <%= f.submit "新規登録", class:"create_admin_cd btn-sm btn-primary new-registration-button" %>
        </div>
    </div>
	<% end %>
</div>

	<div id="cd-modal-artist" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
		   <h3>アーティスト名登録</h3>
		   <%= form_for(@artist, url: admin_artists_path) do |f| %>
		   <%= f.text_field :name, class:"artist_name col-xs-12" %>
		   <%= f.submit "新規登録", class:"create_artist btn btn-primary col-xs-12" %>
		   <% end %>
		  </div>
    </div>
    </div>
	<div id="cd-modal-label" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
	  <div class="modal-content">
	   <h3>レーベル名登録</h3>
	   <%= form_for(@label, url: admin_labels_path) do |f| %>
	   <%= f.text_field :name, class:"label_name col-xs-12" %>
	   <%= f.submit "新規登録", class:"create_label btn btn-primary col-xs-12" %>
	   <% end %>
	  </div>
	</div>
	</div>

	<div id="cd-modal-genre" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
		<div class="modal-content">
		<h3>ジャンル名登録</h3>
		<%= form_for(@genre, url: admin_genres_path) do |f| %>
		<%= f.text_field :name, class:"genre_name col-xs-12" %>
		<%= f.submit "新規登録", class:"create_admin_genre btn btn-primary col-xs-12" %>
		<% end %>
		</div>
	</div>
    </div>

<script>
	$(function(){
		$('#artist_button').on('click', function(){
			$('#cd-modal-artist').modal('show');
		});
		$('#label_button').on('click', function(){
			$('#cd-modal-label').modal('show');
		});
		$('#genre_button').on('click', function(){
			$('#cd-modal-genre').modal('show');
		});
	});
</script>