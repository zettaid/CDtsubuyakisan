<!DOCTYPE html>
<html>
  <head>
    <title>CDtsubuyakisan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700|Noto+Sans+JP:400,700" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header class="navbar navbar-fixed-top">
          <div class="container">
              <nav class="nav navbar-nav navbar-left">
                  <span><%= link_to root_path do %>
                      <%= image_tag "logo.png", class: 'mypae-image', style: "width: 80px; height: 50px; margin-top: 10px;" %>
                      <% end %>
                  </span>
              </nav>
              <nav>
                  <ul class="nav navbar-nav navbar-right">
                      <% if user_signed_in? && current_user.admin? %>
                          <li class="">
                              <%= link_to '管理者マイページ', admin_user_path(current_user.id),class: "mypage header-link"  %>
                          </li>
                          <li class="">
                              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout header-link" %>
                          </li>
                      <% elsif user_signed_in? && !current_user.admin? %>
                          <li class="">
                              <%= link_to 'マイページ', public_user_path(current_user.id),class: "mypage header-link"  %>
                          </li>
                          <li class="">
                              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout header-link" %>
                          </li>
                      <% else %>
                          <li class="">
                              <%= link_to "新規会員登録", new_user_registration_path, class: "sign_up header-link" %>
                          </li>
                          <li class="">
                              <%= link_to "ログイン", new_user_session_path, class: "sign_in header-link" %>
                          </li>
                      <% end %>
                  </ul>
              </nav>
          </div>
      </header>
  <%= yield %>
  </body>
</html>
